{
  "name": "@beforesemicolon/html-parser",
  "version": "0.1.0",
  "description": "HTML parser for NodeJs and Browsers",
  "main": "dist/index.js",
  "types": "dist/index.d.js",
  "scripts": {
    "test": "jest",
    "test:coverage": "jest --coverage",
    "build:parser": "esbuild src/index.ts --bundle --minify --sourcemap --target=chrome58 --outfile=dist/parser-client.min.js",
    "build:project": "tsc -p .",
    "build": "tsc --noEmit && rm -rf dist && npm run build:project && npm run build:parser"
  },
  "keywords": [
    "parser",
    "javascript",
    "nodejs",
    "web",
    "html"
  ],
  "author": "Elson T. Correia",
  "license": "BSD-3-Clause",
  "repository": {
    "url": "https://github.com/beforesemicolon/html-parser",
    "type": "git"
  },
  "devDependencies": {
    "@types/jest": "^29.5.1",
    "@types/jsdom": "^21.1.1",
    "@types/node": "^20.1.0",
    "core-js": "^3.31.0",
    "esbuild": "^0.17.18",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0",
    "jsdom": "^22.1.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.0.4"
  }
}
